{
  "name": "Type",
  "description": "A beautiful word processor",
  "version": "0.1.4",
  "author": "Jon Tingvold <jon.tingvold@gmail.com>",
  "contributors": [],
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder -mwl --publish always"
  },
  "devDependencies": {
    "electron": "^13.1.0",
    "electron-builder": "22.10.4"
  },
  "dependencies": {
    "electron-app": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "glob": "^7.1.7",
    "trix": "^1.3.1",
    "update-electron-app": "^2.0.1"
  },
  "build": {
    "appId": "no.jontingvold.type",
    "productName": "Type",
    "copyright": "Copyright Â© 2017 ${author}",
    "nsis": {
      "perMachine": true
    },
    "fileAssociations": [
      {
        "ext": "type",
        "name": "Type",
        "description": "Type-document",
        "role": "editor"
      }
    ],
    "dmg": {
      "sign": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    },
    "appImage": {
      "category": "Office"
    }
  }
}
